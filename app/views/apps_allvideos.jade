extends ./apps_base.jade

block title
  title Mama Connect

block content

  section(class="listing")
    header(class="listing-header")
      h4(class="listing-heading") All Videos

    each category, i in categories
      section(class="category")
        header(class="category-header")
          h3(class="category-heading")= category.name
        section(class="category-list")

          ul

            each medium, k in category.media
              if (medium.available)
                li(class="category-list-item", onclick="location.assign('./#{category.uri}/video/#{k}');")
                  img(
                    class="w-20 category-list-thumbnail",
                    src="#{mediaHost}/#{medium.uri}.png",
                    alt="media thumbnail"
                  )
                  div(class="category-list-item-meta")
                    h5(class="category-list-item-heading")= medium.name
                    p(class="category-subtext") #{medium.description.slice(0, 70)}&hellip;
                    a(class="category-list-link", href="./#{category.uri}/video/#{k}") + Watch this video
