extends ./thenewapps_base.jade

block title
  title Mama Connect

block content

  section(class="listing")
    header(class="listing-header")
      h4(class="listing-heading") #{heading}

    each category, i in categories
      section(class="category")
        header(class="category-header")
          h3(class="category-heading") #{category.name}
        section(class="category-list")
          ul
            if (category.sites && current.indexOf('all-videos') === -1)
              each site in category.sites
                li(class="category-list-item")
                  img(class="w-20 category-list-thumbnail", src=site.thumbnail, alt="site thumbnail")
                  div(class="w-50")
                    if (site.name.length >= 20)
                      h5(class="category-list-item-heading") #{site.name.slice(0, 20)}&hellip;
                    else
                      h5(class="category-list-item-heading")= site.name
                    p(class="category-subtext") #{site.description.slice(0, 33)}&hellip;
                    a(class="category-list-link", href=site.uri) + Visit this site
                  img(class="w-20 right", src="", alt="cursor icon")
            each medium, k in category.media
              li(class="category-list-item")
                img(class="w-20 category-list-thumbnail", src=medium.thumbnail, alt="media thumbnail")
                div(class="w-50")
                  if (medium.name.length >= 20)
                    h5(class="category-list-item-heading") #{medium.name.slice(0, 20)}&hellip;
                  else
                    h5(class="category-list-item-heading") #{medium.name}
                  p(class="category-subtext") #{medium.description.slice(0, 33)}&hellip;
                  a(class="category-list-link", href="./#{category.uri}/video/#{k}") + Watch this video
                img(class="w-20 right", src="", alt="play video icon")
